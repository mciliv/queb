{
  "name": "mol",
  "version": "1.0.0",
  "description": "Molecular analysis app",
  "main": "backend/api/server.js",
  "scripts": {
    "start": "node backend/api/server.js",
    "dev": "./dev-browsersync",
    "dev:simple": "NODE_ENV=development node backend/api/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "pkill -f 'node.*server.js' && echo 'Cleaned up'",
    "test-then-dev": "./test/test-livereload",
    "dev-quick": "./quick-dev",
    "debug": "./test/debug-pipeline",
    "test:quick": "./test/test-quick",
    "test:with-server": "./test/test-with-server",
    "test:unit": "jest --selectProjects unit-frontend unit-backend",
    "test:integration": "jest --selectProjects integration",
    "test:smoke": "jest --selectProjects smoke",
    "test:background": "node scripts/background-test-runner.js run",
    "test:watch-continuous": "node scripts/background-test-runner.js watch",
    "test:status": "node scripts/background-test-runner.js status",
    "dev:test-watch": "node scripts/dev-test-watcher.js start",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:status": "pm2 status",
    "pm2:logs": "pm2 logs",
    "pm2:startup": "pm2 startup",
    "docker:test": "docker-compose -f docker-compose.test.yml up -d",
    "docker:test:stop": "docker-compose -f docker-compose.test.yml down",
    "docker:test:logs": "docker-compose -f docker-compose.test.yml logs -f",
    "build:production": "node build-production.js",
    "start:production": "NODE_ENV=production node dist/backend/api/server.js",
    "deploy:production": "npm run build:production && npm run start:production"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "fs-extra": "^11.0.0",
    "multer": "^2.0.0",
    "openai": "^4.0.0",
    "pg": "^8.11.3",
    "sharp": "^0.32.0",
    "stripe": "^14.7.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/plugin-transform-modules-commonjs": "^7.27.1",
    "@babel/preset-env": "^7.28.0",
    "babel-jest": "^29.7.0",
    "connect-livereload": "^0.6.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-fetch-mock": "^3.0.3",
    "jsdom": "^26.1.0",
    "livereload": "^0.9.3",
    "node-cron": "^3.0.3",
    "nodemon": "^3.0.2",
    "pm2": "^5.3.0",
    "puppeteer": "^24.15.0",
    "supertest": "^7.1.4"
  },
  "keywords": [
    "molecular",
    "analysis",
    "chemistry",
    "3d"
  ],
  "author": "",
  "license": "MIT"
}
