{
  "watch": [
    "backend",
    "config",
    "index.js"
  ],
  "ext": "js,json",
  "ignore": [
    "node_modules",
    "logs",
    "test",
    "frontend/dist",
    "frontend/node_modules"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 500,
  "verbose": true,
  "colours": true,
  "restartable": "rs",
  "exec": "node ../web/dev"
}
