#!/usr/bin/env bash
set -euo pipefail

repo_root="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"

if [ -x "$repo_root/infrastructure/deployment/deploy.sh" ]; then
  exec "$repo_root/infrastructure/deployment/deploy.sh" "$@"
fi

echo "No deployment script found (infrastructure/deployment/deploy.sh)." >&2
exit 1


