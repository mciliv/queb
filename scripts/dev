#!/usr/bin/env node

// Simple development server launcher
const { spawn } = require('child_process');
const path = require('path');

// Load environment configuration if available
try {
  const envPath = path.join(__dirname, '..', 'config', 'env.js');
  if (require('fs').existsSync(envPath)) {
    require(envPath);
  }
} catch (error) {
  // Silently ignore config loading errors
}

// Set environment variables for development
process.env.NODE_ENV = 'development';
process.env.NODEBUG = '1';

// Start the server directly
const serverPath = path.join(__dirname, '..', 'index.js');
const child = spawn('node', [serverPath, ...process.argv.slice(2)], {
  stdio: 'inherit',
  cwd: path.dirname(__dirname) // Set cwd to mol project root
});

child.on('exit', (code) => {
  process.exit(code);
});