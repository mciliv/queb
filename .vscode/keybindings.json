[
  // Debug Shortcuts
  {
    "key": "cmd+shift+s",
    "command": "workbench.action.debug.start",
    "args": {
      "name": "Start Server"
    },
    "when": "workspaceFolder && !inDebugMode"
  },
  {
    "key": "cmd+shift+t",
    "command": "workbench.action.debug.start",
    "args": {
      "name": "Debug Current Test File"
    },
    "when": "workspaceFolder && resourceExtname == .test.js && !inDebugMode"
  },
  {
    "key": "cmd+shift+c",
    "command": "workbench.action.debug.start",
    "args": {
      "name": "Debug React App in Chrome"
    },
    "when": "workspaceFolder && !inDebugMode"
  },

  // Launch.json Task Runners (Cmd+Shift+Alt+Key)
  {
    "key": "cmd+shift+alt+d",
    "command": "workbench.action.debug.start",
    "args": {
      "name": "Run Dev Environment"
    },
    "when": "workspaceFolder"
  },
  {
    "key": "cmd+shift+alt+t",
    "command": "workbench.action.debug.start",
    "args": {
      "name": "Run All Tests"
    },
    "when": "workspaceFolder"
  },
  {
    "key": "cmd+shift+alt+v",
    "command": "workbench.action.debug.start",
    "args": {
      "name": "Run Visual Tests"
    },
    "when": "workspaceFolder"
  },

