{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Current Shell Script",
      "type": "bashdb",
      "request": "launch",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "internalConsoleOptions": "neverOpen",
      "presentation": {
        "hidden": false,
        "group": "",
        "order": 1
      }
    },
    {
      "name": "Debug Current Node Script",
      "type": "node",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "development",
        "NODEBUG": "1"
      },
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Debug Current Python Script",
      "type": "debugpy",
      "request": "launch", 
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Debug Dev Script",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/../web/dev",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "development"
      },
      "args": ["--no-debug"],
      "internalConsoleOptions": "neverOpen"
    }
  ],
}
