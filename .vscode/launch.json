{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start Dev Server",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/dev",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "serverReadyAction": {
        "pattern": "Server: http://localhost:([0-9]+)",
        "uriFormat": "http://localhost:%s",
        "action": "openExternally"
      }
    },
    {
      "name": "Debug with Nodemon",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/nodemon",
      "args": [
        "--watch", "backend/",
        "--watch", "frontend/",
        "--ext", "js,html,css",
        "--ignore", "node_modules/",
        "--ignore", "test/",
        "--delay", "1000ms",
        "--exec", "node --inspect-brk",
        "backend/api/server.js"
      ],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "restart": true,
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "Run dev",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/dev",
      "console": "externalTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Attach to Running Server",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "skipFiles": ["<node_internals>/**"],
      "restart": true
    }
  ],
  "compounds": [
    {
      "name": "Run dev + Attach",
      "configurations": ["Run dev", "Attach to Running Server"],
      "stopAll": true
    }
  ]
}
