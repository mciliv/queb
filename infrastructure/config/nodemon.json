{
  "watch": ["server.js", "schemas.js", "*.js", "*.json"],
  "ignore": [
    "node_modules/**",
    "sdf_files/**",
    "*.jpg",
    "*.png",
    "*.gif",
    "tests/**",
    "frontend/**",
    "dist/**"
  ],
  "ext": "js,json",
  "env": {
    "NODE_ENV": "development",
    "PY_DEBUG": "1"
  },
  "exec": "node server.js",
  "delay": 1000,
  "verbose": false,
  "quiet": true
}
